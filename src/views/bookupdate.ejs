<div id="masthead">  
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>Update Book
          <p class="lead"></p>
        </h1>
      </div>
      <div class="col-md-5">
        <div class="well well-lg"> 
          <div class="row">
            <div class="col-sm-12">
              
			
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div><!-- /cont -->
  
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="top-spacer"> </div>
      </div>
    </div> 
  </div><!-- /cont -->
  
</div>
<div class="container">
  <div class="row">
    
    <div class="col-md-12"> 
      
      <div class="panel">
        <div class="panel-body">
      <!-- form -->
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">        
           <form method="POST" action="/update/book/<%=book._id%>/updated">
             <div class="form-row">
               <div class="form-group col-md-6">
                 <label style="font-weight: bold;">Title</label>
                 <input class="form-control" id="title" name="title" value="<%=book.title%>">
                </div>
               <div class="form-group col-md-6">
                 <label for="inputPassword4" style="font-weight: bold;">Author</label>
                 <input class="form-control" id="author" name="author" value="<%=book.author%>">
               </div>
             </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label style="font-weight: bold;">Genre</label>
                    <input class="form-control" id="genre" name="genre" value="<%=book.genre%>">
                </div>
                <div class="form-group col-md-6">
                    <label style="font-weight: bold;">Sneak peek of your book</label>
                    <input type="file" id="image" name="image" class="form-control-file" value="<%=book.image%>">
                </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-12">
              <label style="font-weight:bold ;">Description</label>
              <input class="form-control" type="text" id="about" name="about" value="<%=book.about%>">
              <label id="error1"></label>
            </div>
            </div>
          
            <br>
             <button id="submit" type="submit" class="btn btn-secondary">Submit</button>
           </form>
           <!-- form -->
   
       </div>
    
         <div class="col-lg-3"></div>
         </div>

         </div>
